{% extends 'Backend/backend_layout.html.twig' %}

{% block title %}Tags disponible{% endblock %}

{% block body %}
    <h2>Tags disponible</h2>

    <div class="list-group mt-4">
        {% for tag in tags %}
        <div class="d-flex w-100 justify-content-between">
            <a href="{{ path('backend_tag_show', {'id': tag.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start text-center">
                <h4 >{{ tag.name }}</h4>
            </a>
            <a class=" btn btn-info text-right" href="{{ path('backend_tag_edit', {'id': tag.id}) }}">Modifier</a>
            {{ include('Backend/tag/_delete_form.html.twig') }}
        </div>

        {% else %}
        <td colspan="3">no records found</td>
        {% endfor %}
    </div>

    <div class="d-flex justify-content-between">
        <a class=" m-3 btn btn-success" href="{{ path('backend_tag_new') }}">Cr√©er un nouveau tag</a>
        <a class=" m-3 btn btn-secondary" href ="{{ path('backend_question_index') }}">Retour</a>
    </div>

{% endblock %}
