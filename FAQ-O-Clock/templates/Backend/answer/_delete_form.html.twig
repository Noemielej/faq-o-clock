<form method="post" action="{{ path('backend_answer_delete', {'id': answer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ answer.id) }}">
    <div class="d-flex justify-content-end">
        <button class="btn btn-danger text-right">Supprimer</button>
    </div>
</form>
