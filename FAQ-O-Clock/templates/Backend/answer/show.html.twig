{% extends 'Backend/backend_layout.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <h2>Answer</h2>
    {% if answer %}
        <div class="list-group mt-5">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <h4>{{ answer.title }}</h4>
                <p class="mb-1">{{ answer.body }}</p>
                <div class="d-flex w-100 justify-content-between">
                    <small>posté par {{ answer.author }}</small>
                    <small>le {{ answer.createdAt ? answer.createdAt|date('Y-m-d') : '' }}</small>
                </div>
            </div>
        </div>
    {% else %}
        <p colspan="6">Pas de questions posés</p>
    {% endif %}

    <a  class="btn btn-info" href="{{ path('backend_answer_edit', {'id': answer.id}) }}">Modifier</a>

    {{ include('Backend/answer/_delete_form.html.twig') }}

    <div class="d-flex justify-content-start">
        <a  class="btn btn-secondary" href="{{ path('backend_user_show', {'id': app.user.id}) }}">Retour</a>
    </div>

{% endblock %}
